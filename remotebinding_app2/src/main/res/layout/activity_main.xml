<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_random_Num_textId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_bind_service_btnId"
        android:layout_width="147dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:text="Bind Service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_random_Num_textId" />

    <Button
        android:id="@+id/main_unbind_service_BtnId"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:text="UnBind Service"
        app:layout_constraintEnd_toEndOf="@+id/main_bind_service_btnId"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/main_bind_service_btnId"
        app:layout_constraintTop_toBottomOf="@+id/main_bind_service_btnId" />

    <Button
        android:id="@+id/main_get_num_BtnId"
        android:layout_width="146dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:text="Get Random Number"
        app:layout_constraintEnd_toEndOf="@+id/main_unbind_service_BtnId"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/main_unbind_service_BtnId"
        app:layout_constraintTop_toBottomOf="@+id/main_unbind_service_BtnId" />
</android.support.constraint.ConstraintLayout>