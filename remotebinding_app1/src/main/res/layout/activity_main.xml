<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/main_start_service_BtnId"
        android:layout_width="153dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="8dp"
        android:text="Start Service"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_stop_service_BtnId"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:text="Stop Service"
        app:layout_constraintEnd_toEndOf="@+id/main_start_service_BtnId"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/main_start_service_BtnId"
        app:layout_constraintTop_toBottomOf="@+id/main_start_service_BtnId" />
</android.support.constraint.ConstraintLayout>